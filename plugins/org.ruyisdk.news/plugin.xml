<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
    <extension
        point="org.eclipse.ui.views">
        <category
            id="org.ruyisdk.news.category"
            name="RuyiSDK"/>
        <view
            id="org.ruyisdk.news.view"
            name="Ruyi News"
            class="org.ruyisdk.news.views.NewsView"
            category="org.ruyisdk.news.category"/>
    </extension>

    <extension point="org.eclipse.ui.menus">
        <menuContribution
            locationURI="menu:org.ruyisdk.ruyi.menus.main?after=additions">
            <command
                commandId="org.eclipse.ui.views.showView"
                label="News"
                tooltip="Open Ruyi News view">
                <parameter
                    name="org.eclipse.ui.views.showView.viewId"
                    value="org.ruyisdk.news.view" />
            </command>
        </menuContribution>
    </extension>
</plugin>
